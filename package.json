{
  "name": "comparium",
  "version": "1.0.0",
  "type": "module",
  "description": "A web-based tool for comparing freshwater aquarium fish species and checking compatibility. Includes 99 species with detailed care requirements, predation warnings, and compatibility analysis.",
  "main": "index.js",
  "scripts": {
    "css:build": "tailwindcss -i ./css/tailwind-input.css -o ./css/tailwind.css",
    "css:watch": "tailwindcss -i ./css/tailwind-input.css -o ./css/tailwind.css --watch",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:notifications": "playwright test tests/notifications.spec.js",
    "test:data": "node scripts/test-data-integrity.js",
    "test:rules": "node scripts/test-firestore-rules.js",
    "test:function": "node scripts/test-cloud-function.js --dry-run",
    "test:function:run": "node scripts/test-cloud-function.js",
    "test:all": "npm run test:data && npm run test:rules && npm run test",
    "notify:create": "node scripts/test-create-notification.js",
    "notify:list": "node scripts/test-create-notification.js list",
    "migrate:fish": "node scripts/migrate-fish-to-firestore.js",
    "migrate:glossary": "node scripts/migrate-glossary-to-firestore.js",
    "images": "node scripts/image-pipeline.js",
    "images:preview": "node scripts/generate-image-preview.js",
    "images:upload": "node scripts/upload-selected-images.js",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "format": "prettier --write \"**/*.{js,html,css,json}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,json}\""
  },
  "repository": {
    "type": "git",
    "url": "http://local_proxy@127.0.0.1:58598/git/hklein13/comparium"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/cli": "^4.1.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18"
  }
}

{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "scripts/**",
      "tests/**",
      "*.md",
      "*.json",
      "package*.json",
      "eslint.config.js",
      "playwright.config.js"
    ]
  },
  "functions": {
    "source": "functions"
  }
}
